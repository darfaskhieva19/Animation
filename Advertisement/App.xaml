<Application x:Class="Advertisement.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Advertisement"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <ControlTemplate TargetType="Button" x:Key="Btn">
            <Border CornerRadius="17" Background="{TemplateBinding Background}" Height="45" Width="270" >
                <ContentControl  VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Calibry" Foreground="Black" FontWeight="Light" Content="{TemplateBinding Content}"/>
            </Border>
        </ControlTemplate>
        
    </Application.Resources> 
</Application>
